generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model WritingSamples {
  id        String   @id @default(uuid())
  user      String
  fileName  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([user])
}

model Assignment {
  id        String   @id @default(uuid())
  user      String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sources   Source[]
}

model Source {
  id           String      @id @default(uuid())
  name         String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  userID       String
  vectorPrefix String
  gcpFileName  String
  Assignment   Assignment? @relation(fields: [assignmentId], references: [id])
  assignmentId String?
}

model User {
  id               String   @id @default(uuid())
  signUpDate       DateTime
  actionsRemaining Int
  accountType      String
}
